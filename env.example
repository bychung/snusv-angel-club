NEXT_PUBLIC_SUPABASE_URL="your-project-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# JWT Secret for temporary tokens (add a strong random secret)
# Example: JWT_SECRET="super-secret-jwt-key-for-temp-tokens-change-this-in-production"
JWT_SECRET="your-jwt-secret-key-here"

# OAuth Provider Configuration
# Kakao 로그아웃에 필요
NEXT_PUBLIC_KAKAO_REST_API_KEY=your_kakao_rest_api_key_here

# 브랜딩 설정
NEXT_PUBLIC_BRAND="snusv"  # "snusv" | "other"

# Gmail API 설정 (이메일 발송용)
GMAIL_CLIENT_EMAIL="your-service-account-email@your-project.iam.gserviceaccount.com"
GMAIL_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key content here\n-----END PRIVATE KEY-----"

# 시스템 관리자 이메일 목록 (쉼표로 구분)
# 모든 브랜드의 관리자 권한을 가진 시스템 레벨 관리자
# 예시: SYSTEM_ADMIN_EMAILS="admin1@example.com,admin2@example.com"
SYSTEM_ADMIN_EMAILS=""
